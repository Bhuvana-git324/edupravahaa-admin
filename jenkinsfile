pipeline {
    agent any

    stages {
        stage('git branch: 'main', url: 'https://github.com/Bhuvana-git324/edupravahaa-admin.git'') {
            steps {
                echo 'hello world'
                sh 'ls'
            }
        }
    }

    post {
        success {
            emailext(
                subject: "SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
Hello Bhuvaneswari,

Your Jenkins job completed successfully.

Job Name : ${env.JOB_NAME}
Build No : ${env.BUILD_NUMBER}
Status   : SUCCESS

Regards,
Jenkins
""",
                to: "kbhuvaneswari474@gmail.com"
            )
        }

        failure {
            emailext(
                subject: "FAILED: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: "Build failed. Please check Jenkins console output.",
                to: "kbhuvaneswari474@gmail.com"
            )
        }
    }
}
